{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true // enables importers to jump to source
  },
  "lib": ["es2015"]
}

