{
  "include": ["src/**/*"],
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "es2022",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true // enables importers to jump to source
  },
  "lib": ["ES2022"]
}
